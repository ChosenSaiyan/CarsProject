@page "{id}"
@model CarsProject.Pages.Cars.DetailsModel
@{
    ViewData["Title"] = "Car Details";
}

<div class="card-deck justify-content-sm-center">
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
                <img class="card-img-top" src="@Model.Car.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-center">@Model.Car.Name</h5>
                <p class="card-text text-center"><label class="font-weight-bold" asp-for="@Model.Car.Colour"></label>&nbsp @Model.Car.Colour</p>
                <br/>
                <center>
                </center>
            </div>
        </div>
</div>

<div class="col-3">
    <a asp-page="/Cars/Index" class="btn btn-dark form-control">Back to List</a>
</div>