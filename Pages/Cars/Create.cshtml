@page
@model CarsProject.Pages.Cars.CreateModel
@{
    ViewData["Title"] = "Create Record";
}

<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <input type="hidden" asp-for="Car.Id" />
        <div class="form-group col-md-6">
            <label asp-for="Car.Name"></label>
            <input asp-for="Car.Name" class="form-control">
            <span asp-validation-for="Car.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Car.Colour"></label>
            <input asp-for="Car.Colour" class="form-control">
            <span asp-validation-for="Car.Colour" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Car.ImageUrl"></label>
        <input asp-for="Car.ImageUrl" class="form-control">
        <span asp-validation-for="Car.ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-3 offset-3">
            <input type="submit" value="Update" class="btn btn-info form-control" />
        </div>
        <div class="col-3">
            <a asp-page="/Cars/Index" class="btn btn-dark form-control">Back to List</a>
        </div>
    </div>
</form>